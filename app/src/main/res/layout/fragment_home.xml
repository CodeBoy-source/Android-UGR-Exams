<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".P2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70px">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="396dp"
            android:layout_height="303dp"
            android:alpha="0.15"
            android:scaleType="centerCrop"
            android:scaleX="1.3"
            android:scaleY="1.5"
            android:src="@drawable/logougr2"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblCarrera"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Query"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtConvocatoria" />

        <TextView
            android:id="@+id/Q_res"
            android:layout_width="285dp"
            android:layout_height="210dp"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSubmit" />

        <TextView
            android:id="@+id/lblCarrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="120dp"
            android:fontFamily="sans-serif-medium"
            android:text="Introduzca la carrera:"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTitulo" />

        <TextView
            android:id="@+id/lblAsignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="95dp"
            android:fontFamily="sans-serif-medium"
            android:text="Introduzca la asignatura"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCarrera" />

        <TextView
            android:id="@+id/lblConvocatoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="sans-serif-medium"
            android:text="Introduzca la convocatoria:"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAsignatura" />

        <EditText
            android:id="@+id/txtCarrera"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Carrera"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblCarrera" />

        <EditText
            android:id="@+id/txtAsignatura"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Asignatura"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblAsignatura" />

        <EditText
            android:id="@+id/txtConvocatoria"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Convocatoria"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblConvocatoria" />

        <ImageView
            android:id="@+id/btnCarrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/txtCarrera"
            app:layout_constraintTop_toTopOf="@+id/txtCarrera"
            app:srcCompat="@drawable/ic_mic_black_off" />

        <ImageView
            android:id="@+id/btnAsignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/txtAsignatura"
            app:layout_constraintTop_toTopOf="@+id/txtAsignatura"
            app:srcCompat="@drawable/ic_mic_black_off" />

        <ImageView
            android:id="@+id/btnConvocatoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/txtConvocatoria"
            app:layout_constraintTop_toTopOf="@+id/txtConvocatoria"
            app:srcCompat="@drawable/ic_mic_black_off" />

        <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="Consultorio de ExÃ¡menes"
            android:textAlignment="center"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/lblCarrera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>